<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >
    <ImageView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@mipmap/logout_head"
        android:textSize="18sp"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_marginLeft="0.5sp"
        android:layout_marginRight="0.5sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_msg"
        android:padding="10sp"
            android:textSize="20dp"
            android:background="#fff"
            android:textColor="#000000"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:padding="10sp"
        android:layout_marginLeft="0.5sp"
        android:layout_marginRight="0.5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/dialog_textview_white_bg">
        <ImageView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logout_ok_bg"
            android:clickable="true">

        </ImageView>
    <View
        android:layout_width="10sp"
        android:layout_height="1dp"></View>
        <ImageView
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logout_cancle_bg"
            android:clickable="true"
            android:gravity="center"></ImageView>
    </LinearLayout>

</LinearLayout>
